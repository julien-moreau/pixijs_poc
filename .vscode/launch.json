{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch (source maps)",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:1338/index.html",
            "webRoot": "${workspaceRoot}/",
            "sourceMaps": true,
            "userDataDir": "${workspaceRoot}/.tempChromeProfileForDebug"
        },
        {
            "name": "Launch (without source maps)",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:1338/index.html",
            "webRoot": "${workspaceRoot}/website/",
            "sourceMaps": false,
            "userDataDir": "${workspaceRoot}/.tempChromeProfileForDebug"
        }
    ]
}